{
  "dashboard": {
    "title": "Flink Log Processor Dashboard",
    "tags": ["flink", "logs"],
    "timezone": "browser",
    "panels": [
      {
        "id": 1,
        "title": "Records Processed",
        "type": "graph",
        "targets": [
          {
            "expr": "flink_taskmanager_job_task_operator_records_processed",
            "legendFormat": "{{task_name}}"
          }
        ]
      },
      {
        "id": 2,
        "title": "Parse Errors",
        "type": "graph",
        "targets": [
          {
            "expr": "flink_taskmanager_job_task_operator_parse_errors",
            "legendFormat": "{{task_name}}"
          }
        ]
      },
      {
        "id": 3,
        "title": "Records Per Second",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(flink_taskmanager_job_task_operator_records_processed[1m])",
            "legendFormat": "{{task_name}}"
          }
        ]
      },
      {
        "id": 4,
        "title": "CPU Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "flink_taskmanager_Status_JVM_CPU_Load",
            "legendFormat": "{{tm_id}}"
          }
        ]
      },
      {
        "id": 5,
        "title": "Memory Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "flink_taskmanager_Status_JVM_Memory_Heap_Used",
            "legendFormat": "{{tm_id}}"
          }
        ]
      },
      {
        "id": 6,
        "title": "Checkpoint Duration",
        "type": "graph",
        "targets": [
          {
            "expr": "flink_jobmanager_job_lastCheckpointDuration",
            "legendFormat": "{{job_name}}"
          }
        ]
      }
    ]
  }
}
